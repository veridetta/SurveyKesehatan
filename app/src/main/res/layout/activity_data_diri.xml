<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_300"
    >
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@drawable/rocket"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/_21sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/_17sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="@dimen/_30sdp"
                android:paddingLeft="@dimen/_30sdp"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="@dimen/_6sdp"
                    app:cardCornerRadius="@dimen/_6sdp"
                    app:cardMaxElevation="@dimen/_6sdp">
                    <LinearLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_16sdp">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70sdp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NIK"
                            android:textSize="@dimen/_14sdp"/>
                        <EditText
                            android:id="@+id/input_nik"
                            android:layout_width="match_parent"
                            android:inputType="textNoSuggestions"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:paddingTop="@dimen/_6sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama"
                            android:textSize="@dimen/_14sdp"/>
                        <EditText
                            android:id="@+id/input_nama"
                            android:layout_width="match_parent"
                            android:inputType="textNoSuggestions"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:text="Jenis Kelamin"
                            android:paddingTop="@dimen/_6sdp"/>
                        <Spinner
                            android:id="@+id/input_jk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </Spinner>
                        <TextView
                            android:paddingTop="@dimen/_6sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Umur"
                            android:textSize="@dimen/_14sdp"/>
                        <EditText
                            android:id="@+id/input_umur"
                            android:inputType="number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:paddingTop="@dimen/_6sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alamat"
                            android:textSize="@dimen/_14sdp"/>
                        <EditText
                            android:id="@+id/input_alamat"
                            android:maxLines="3"
                            android:lines="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textNoSuggestions"/>
                        <Button
                            android:id="@+id/btn_daftar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/green_700"
                            android:text="Mulai"
                            android:textColor="@color/white"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:id="@+id/login_admin"
                            android:paddingTop="@dimen/_6sdp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="atau masuk sebagai"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" admin"
                                android:textColor="@color/blue_500"
                                android:textStyle="italic"/>
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <RelativeLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/user"
        android:layout_gravity="center|top"
        ></RelativeLayout>
</android.support.design.widget.CoordinatorLayout>