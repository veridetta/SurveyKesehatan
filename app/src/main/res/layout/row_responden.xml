<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardMaxElevation="@dimen/_4sdp"
        android:padding="@dimen/_2sdp"
        android:layout_margin="@dimen/_6sdp"
        android:id="@+id/card_responden">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_14sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/res_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Responden"
                    android:textStyle="bold"
                    android:textColor="@color/grey_600"
                    android:textSize="@dimen/_14sdp"/>
                <TextView
                    android:id="@+id/res_nik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_6sdp"
                    android:text="1234566789"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/res_jk"
                    android:padding="@dimen/_4sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green_500"
                    android:backgroundTintMode="multiply"
                    android:text="Laki-laki "
                    android:textColor="@color/white"
                    android:background="@color/green_500"/>
                <TextView
                    android:id="@+id/res_usia"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:padding="@dimen/_4sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTintMode="multiply"
                    android:backgroundTint="@color/orange_500"
                    android:text="17 tahun"
                    android:textColor="@color/white"
                    android:background="@color/orange_500"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/home_orange"
                    android:backgroundTintMode="multiply"
                    android:id="@+id/bg_home"
                    android:backgroundTint="@color/orange_500"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_10sdp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/orange_500"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/res_alamat"
                        android:paddingTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14sdp"
                        android:text="Jalan merdeka nomor 16 Cirebon"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/res_tgl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="12 Januari 2018"/>
            <View
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_4sdp"
                android:background="@color/blue_500"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>